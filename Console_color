using System;

namespace All_in_S4_LasrPart
{
    class Program
    {
        static void Main(string[] args)
        {
            Int16 number;

            Console.BackgroundColor = ConsoleColor.Black;
            Console.ForegroundColor = ConsoleColor.Blue;


            Console.WriteLine("pls insert youre number: ");
            number = Convert.ToInt16(Console.ReadLine());

            Console.WriteLine("you're number is {0} {1} {2}", number, number + 1, number + 2);

            Console.ReadKey(true);
            
        }
    }
}
